modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow]]
name = "MongoDB"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mongod --dbpath /tmp/mongodb_data --port 27017 --bind_ip 127.0.0.1"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 DB_CONNECTION_STRING=mongodb://localhost:27017/payfunds_dev JWT_SECRET=dev_jwt_secret JWT_EXPIRY=24h CRYPTO_SECRET_KEY=dev_crypto_secret BCRYPT_SALTROUND=10 BRAND_NAME=Payfunds ITEMS_PER_PAGE=10 BACKEND_HOST_URL=http://0.0.0.0:5000 FRONTEND_HOST_URL=http://0.0.0.0:5000 COINGECKO_URL=https://api.coingecko.com/api/v3 npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 35175
externalPort = 80

[[ports]]
localPort = 44771
externalPort = 3001
